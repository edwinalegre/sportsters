<div class="container">
	<div class="well">
		<h2>Edit New Article</h2>
	</div>
</div>
<div class="row">
	<div class="col-sm-3 col-md-2">
	</div>
	<div class="col-sm-6 col-md-8">
		<div class="thumbnail">

			<ul>
				<% @article.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>

			<%= form_for(@article) do |f| %>

				<%= f.label :category, "Category:" %><br>
				<%= f.select(:category) do %>
				<%= content_tag(:option, @article[:category], value: @article[:category]) %>
				  <% [
				      ['News', 'News'],
				      ['Scores', 'Scores'],
				      ['Schedule', 'Schedule']
				    ].each do |c| -%>
				    <%= content_tag(:option, c.first, value: c.last) %>
				  <% end %>
				<% end %><br>
				<%= f.label :status, "Status:" %><br>
				<%= f.select(:status) do %>
				<%= content_tag(:option, @article[:status], value: @article[:status]) %>
				  <% [
				      ['Draft', 'Draft'],
				      ['Publish', 'Publish'],
				      ['Archive', 'Archive']
				    ].each do |c| -%>
				    <%= content_tag(:option, c.first, value: c.last) %>
				  <% end %>
				<% end %><br>
				<%= f.label "Title:" %><br>
				<%= f.text_field :title %><br>
				<%= f.label "Body:" %><br>
				<%= f.text_area :body, class: "form-control", rows: "15" %><br>
				<%= f.submit "Save Article", class: "btn btn-success" %> 
				<%= link_to "Back", admins_path, class: "btn btn-default" %>

			<% end %>
			
		</div>
	</div>
	<div class="col-sm-3 col-md-2">
	</div>
</div>

