<h1>Update Profile</h1>

<div class="row">
	<div class="col-sm-3 col-md-3">
	</div>
	  <div class="col-sm-6 col-md-6">
	    <div class="thumbnail">

			<ul>
			<% @profile.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
			</ul>

			<%= form_for(@profile) do |f| %>
			Phone:<br>
			<%= f.text_field :phone %><br>
			Mobile Phone:<br>
			<%= f.text_field :mobile_phone %><br>
			Alternate Email:<br>
			<%= f.text_field :alternate_email %><br>
			Address 1:<br>
			<%= f.text_field :address1 %><br>
			Address 2:<br>
			<%= f.text_field :address2 %><br>
			City:<br>
			<%= f.text_field :city %><br>
			State:<br>
			<%= f.text_field :state %><br>
			Zip:<br>
			<%= f.text_field :zip %><br>
			Country:<br>
			<%= f.text_field :country %><br>
				<%= f.submit "Update Profile" %>
			<% end %>

			<%= link_to "Back", profile_path %>
	    </div>
  	</div>
	<div class="col-sm-3 col-md-3">
	</div>
</div>
